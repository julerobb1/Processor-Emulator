<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <!-- Enable native apphost so an .exe is generated -->
    <UseAppHost>true</UseAppHost>
    <RootNamespace>ProcessorEmulator</RootNamespace>
    <AssemblyName>ProcessorEmulator</AssemblyName>
  </PropertyGroup>
  <!-- Pre-build/clean: kill any running instance to avoid file lock issues -->
  <Target Name="EnsureNoRunningInstance" BeforeTargets="Clean;Build;Rebuild;Publish">
    <!-- Attempt to terminate any running ProcessorEmulator.exe -->
    <Exec Command="taskkill /F /IM ProcessorEmulator.exe" ContinueOnError="true" />
  </Target>
  <!-- Using stub Unicorn definitions in Tools/BinaryTranslator.cs; no external package required -->
</Project>
