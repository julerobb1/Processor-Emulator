<Window x:Class="ProcessorEmulator.HypervisorWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="VMware-Style Hypervisor - X1 Platform" Height="600" Width="800" Background="Black" WindowStartupLocation="CenterOwner">
	<Grid>
		<StackPanel>
			<TextBlock Text="X1 PLATFORM" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
			<TextBlock Text="BIOS Version 3.2.1 - ARM Cortex-A15" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
			<TextBlock x:Name="StatusText" Text="Initializing..." FontSize="14" Foreground="Yellow" HorizontalAlignment="Center" Margin="0,10,0,0"/>
			<Border BorderThickness="2" BorderBrush="Gray" Margin="10" VerticalAlignment="Stretch" Background="Black">
				<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
					<TextBox x:Name="LogBox" Background="Black" Foreground="LightGreen" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" BorderThickness="0" AcceptsReturn="True"/>
				</ScrollViewer>
			</Border>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
				<Button x:Name="PowerOnButton" Content="Power On" Width="100" Margin="5" Click="PowerOn_Click"/>
				<Button x:Name="ResetButton" Content="Reset" Width="100" Margin="5" Click="Reset_Click" IsEnabled="False"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
