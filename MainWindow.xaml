<Window x:Class="ProcessorEmulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processor Emulator" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Edit" />
            <MenuItem Header="_Help" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="Ready" />
        </StatusBar>
        <Grid>
            <StackPanel Margin="20">
                <TextBlock Text="Emulator Control Panel" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <Button Content="Start Emulation" Width="150" Height="30" Margin="0,0,0,10" Click="StartEmulation_Click"/>
                <TextBox Width="300" Height="25" PlaceholderText="Enter command..."/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
